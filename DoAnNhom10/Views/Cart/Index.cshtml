@model List<DoAnNhom10.Models.CartItem>

@{
    ViewBag.Title = "Giỏ hàng";
    var total = Model.Sum(x => x.Total);
}

<div class="container mt-4">
    <h2 class="mb-4">🛒 Giỏ hàng của bạn</h2>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info">
            Giỏ hàng của bạn đang trống.
            <a href="@Url.Action("Index", "Products")" class="btn btn-primary btn-sm ml-2">Tiếp tục mua sắm</a>
        </div>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Hình ảnh</th>
                    <th>Sản phẩm</th>
                    <th>Giá</th>
                    <th width="120">Số lượng</th>
                    <th>Tổng</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="@Url.Content(item.ImageUrl)" alt="@item.ProductName" width="80" class="img-thumbnail" />
                        </td>
                        <td>@item.ProductName</td>
                        <td>@item.Price.ToString("N0") đ</td>
                        <td>
                            @using (Html.BeginForm("Update", "Cart", new { id = item.ProductID }, FormMethod.Post, new { @class = "form-inline" }))
                            {
                                <input type="number" name="qty" value="@item.Quantity" min="1" class="form-control form-control-sm" style="width:70px;" />
                                <button type="submit" class="btn btn-sm btn-primary ml-1">Cập nhật</button>
                            }
                        </td>
                        <td>@item.Total.ToString("N0") đ</td>
                        <td>
                            @using (Html.BeginForm("Remove", "Cart", new { id = item.ProductID }, FormMethod.Post))
                            {
                                <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Tổng cộng -->
        <div class="d-flex justify-content-between align-items-center mt-3">
            <h4 class="text-danger">Tổng cộng: @total.ToString("N0") đ</h4>
            <div>
                <a href="@Url.Action("Index", "Products")" class="btn btn-secondary">← Tiếp tục mua sắm</a>
                <a href="@Url.Action("Checkout", "Cart")" class="btn btn-success">Thanh toán</a>
            </div>
        </div>
    }
</div>
